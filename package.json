{
  "name": "lasverg-node",
  "version": "0.0.1",
  "description": "Backend server for lasverg.io",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "clear:build": "rimraf ./build",
    "compile": "tsc",
    "copy:env": "cp -r .env ./build/.env",
    "build": "pnpm clear:build && pnpm compile && pnpm copy:env",
    "serve:build": "node ./build/server.js",
    "start": "nodemon",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "db:backfill:profiles": "tsx src/scripts/backfill-profiles.ts"
  },
  "keywords": [
    "lasverg.io"
  ],
  "author": "Lasverg",
  "license": "ISC",
  "dependencies": {
    "@types/useragent": "^2.3.4",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "ipaddr.js": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb": "^6.12.0",
    "mongoose": "^8.9.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-fetch": "^3.3.2",
    "pino": "^9.6.0",
    "useragent": "^2.3.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@jest/globals": "^29.7.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "esbuild"
    ]
  }
}
